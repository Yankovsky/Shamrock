@model IList<Shamrock_WebSite.Models.Event_Locale>

@for (int i = 0; i < Model.Count(); i++)
{
    <div>
        <fieldset>
            <legend>@Model[i].Culture</legend>
            @Html.HiddenFor(model => model[i].EventId)
            @Html.HiddenFor(model => model[i].Culture)
            <div class="editor-label">
                @Html.LabelFor(model => model[i].DisplayName)
                @Html.ValidationMessageFor(model => model[i].DisplayName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].DisplayName)
            </div>
                        
            <div class="editor-label">
                @Html.LabelFor(model => model[i].Description)
                @Html.ValidationMessageFor(model => model[i].Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].Description)
            </div>
        </fieldset>
    </div>
}